/**
 * @param {string} word1
 * @param {string} word2
 * @return {string}
 */
var mergeAlternately = function (word1, word2) {
    let newWord = "";
    let i = 0;
    while (word1[i] || word2[i]) {
        if (word1[i]) newWord += word1[i];
        if (word2[i]) newWord += word2[i];
        i++
    }
    return newWord
};
